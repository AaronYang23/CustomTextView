<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >

        <com.library.CustomTextView
            android:id="@+id/bt_font_size_small"
            style="@style/custom_button_font_setting_style"
            android:text="@string/font_small"
            app:textLeftTopRadius="5dp"
            app:textLeftBottomRadius="5dp"
            app:textNoRightStroke="true"
            />

        <com.library.CustomTextView
            android:id="@+id/bt_font_size_normal"
            style="@style/custom_button_font_setting_style"
            android:text="@string/font_normal"
            />

        <com.library.CustomTextView
            android:id="@+id/bt_font_size_big"
            style="@style/custom_button_font_setting_style"
            android:text="@string/font_big"
            app:textNoLeftStroke="true"
            />

        <com.library.CustomTextView
            android:id="@+id/bt_font_size_large"
            style="@style/custom_button_font_setting_style"
            android:text="@string/font_large"
            app:textRightTopRadius="5dp"
            app:textRightBottomRadius="5dp"
            app:textNoLeftStroke="true"
            />

    </LinearLayout>


    <com.library.CustomTextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="圆角TextView"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp"
        android:gravity="center"
        app:textNormalSolidColor="@color/color_303f9f"
        app:textRadius="@dimen/radius_10"
        />

    <com.library.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="左上左下圆角TextView!"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:textNormalSolidColor="@color/color_303f9f"
        app:textLeftTopRadius="@dimen/radius_10"
        app:textLeftBottomRadius="@dimen/radius_10"
        />

    <com.library.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="圆角TextView"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:textNormalSolidColor="@color/color_303f9f"
        app:textRadius="@dimen/radius_10"
        app:textStrokeColor="@color/color_ff4081"
        app:textStrokeWidth="2dp"
        />

    <com.library.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="45弧度按下改变文字颜色TextView"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:textRadius="@dimen/radius_45"
        app:textNormalSolidColor="@color/color_303f9f"
        app:textNormalTextColor="@color/color_ff0000"
        app:textSelectedTextColor="@color/color_00ff00"
        app:textStrokeWidth="2dp"
        />

    <com.library.CustomTextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="左上左下圆角TextView!"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:textNormalSolidColor="@color/color_303f9f"
        app:textRadius="@dimen/radius_45"
        app:textDrawable="@drawable/ic_launcher"
        />


</LinearLayout>
